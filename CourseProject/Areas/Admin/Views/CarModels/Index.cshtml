@model IEnumerable<CourseProject.Models.CarModel>

@{
    ViewData["Title"] = "Car models";
}

<h1>Car models</h1>
<hr>
<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Model
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td class="parent-car-model">
            @Html.DisplayFor(modelItem => item.Brand.Name)
            @Html.DisplayFor(modelItem => item.Parent.Name)
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <div style="display: flex;">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> &nbsp;
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> &nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </div>
        </td>
    </tr>
    foreach (var child in item.Children) {
        <tr>
            <td class="child-car-model">       @Html.DisplayFor(modelItem => child.Brand.Name) @Html.DisplayFor(modelItem => child.Parent.Name) @Html.DisplayFor(modelItem => child.Name)</td>
            <td>
                <div style="display: flex;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> &nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> &nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </div>
            </td>
        </tr>
    }
}
    </tbody>
</table>
